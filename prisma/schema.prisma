// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(uuid())
  email              String    @unique
  password           String
  name               String
  phoneNumber        String
  role               String    // 'ADMIN', 'FIELD_OWNER', 'TEAM_CAPTAIN'
  subscription       String    // 'NONE', 'WEEKLY', 'MONTHLY', 'ANNUAL'
  subscriptionExpiry String?
  latitude           Float?
  longitude          Float?
  createdAt          DateTime  @default(now())

  // Relacionamentos
  subTeams    SubTeam[]
  fields      Field[]
  bookedSlots MatchSlot[]
}

model SubTeam {
  id       String @id @default(uuid())
  name     String
  category String
  userId   String
  user     User   @relation(fields: [userId], references: [id])
}

model Field {
  id                     String      @id @default(uuid())
  ownerId                String
  owner                  User        @relation(fields: [ownerId], references: [id])
  name                   String
  location               String
  hourlyRate             Float
  cancellationFeePercent Float
  pixKey                 String
  pixName                String
  imageUrl               String
  contactPhone           String
  latitude               Float
  longitude              Float
  slots                  MatchSlot[]
}

model MatchSlot {
  id                String   @id @default(uuid())
  fieldId           String
  field             Field    @relation(fields: [fieldId], references: [id])
  date              String   // Formato: YYYY-MM-DD
  time              String   // Formato: HH:MM
  isBooked          Boolean  @default(false)
  status            String   // 'available', 'pending_verification', 'confirmed'
  price             Float

  // Informações do Time da Casa (Dono do Campo)
  hasLocalTeam      Boolean  @default(false)
  localTeamName     String?
  allowedCategories String[] // Array de strings (Ex: ["Sub-20", "Veteranos"])

  // Informações de quem agendou (Visitante)
  bookedByUserId    String?
  bookedByUser      User?    @relation(fields: [bookedByUserId], references: [id])
  bookedByTeamName  String?
  bookedByCategory  String?
  bookedByPhone     String?

  createdAt DateTime @default(now())
}
